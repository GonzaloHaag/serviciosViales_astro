                </div>
            </div>
        </div>
    </section>
</Layout>
<script type="text/javascript" is:inline>
    document.addEventListener("astro:page-load", () => {
      if (typeof grecaptcha !== "undefined") {
        grecaptcha.render("g-recaptcha-contacto", {
          sitekey: "6LfMRCAqAAAAAIE_0vQBGahLNxbYeZ_Q59jBGsxn",
        });
      }
    });
   
  </script>
  <script is:inline>
    document.addEventListener("astro:page-load", () => {
      const btn = document.getElementById("button_form_contacto");
      const formContacto = document.getElementById("form_contacto");
  
      formContacto.addEventListener("submit", function (event) {
        event.preventDefault();
  
        btn.value = "Enviando...";
  
        const serviceID = "service_61dv8ni";
        const templateID = "template_l1fngky";
  
        emailjs.sendForm(serviceID, templateID, this).then(
          () => {
            btn.value = "Enviar";
            alert("Enviado!");
            formContacto.reset();
          },
          (err) => {
            btn.value = "Enviar";
            alert(JSON.stringify(err));
          },
        );
      });
    });
  </script>
<style>
    input {
        @apply w-full;
    }
    input[type="text"],
    input[type="number"],
    textarea,
    select {
        @apply outline-none transition-colors duration-300 focus:border-sv-blue border border-solid border-[#DBDBDB] rounded-lg p-4;
    }
</style>

<form method="post" id="form_buscador" autocomplete="off" transition:persist> <!-- Para que persista el valor en las transiciones -->
    <input
        id="codigo"
        type="text"
        name="codigo"
        placeholder="CÃ³digo"
        class="bg-inherit rounded-lg outline-none indent-4 pr-8 border border-solid border-[#DBDBDB] transition-colors duration-300 focus:border-sv-blue relative w-full h-full"
    />
    <button type="submit">
        <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 512 512"
            class="absolute right-3 top-4 cursor-pointer w-4 h-4 transition-colors duration-300 hover:fill-sv-blue"
        >
            <path
                d="M416 208c0 45.9-14.9 88.3-40 122.7L502.6 457.4c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L330.7 376c-34.4 25.2-76.8 40-122.7 40C93.1 416 0 322.9 0 208S93.1 0 208 0S416 93.1 416 208zM208 352a144 144 0 1 0 0-288 144 144 0 1 0 0 288z"
            ></path></svg
        >
    </button>
</form>
<script>
    const formulario = document.getElementById("form_buscador");
   
        formulario?.addEventListener("submit", (event: Event) => {
        event.preventDefault();
        let codigo = (event.target as HTMLFormElement).codigo.value;
        codigo = codigo.trim();

        if (codigo === "") {
            return;
        } else {
            window.open(
                `https://portal.sv.com.ar/buscadorpublico.aspx?${codigo}`,
                "_blank",
            );
        }
    });

    
</script>
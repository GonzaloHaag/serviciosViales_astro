---
interface Props {
    numero:string;
    title:string;
    text:string;
}
const {numero,title,text} = Astro.props;
---
<div class="flex flex-col gap-20 px-10 pt-10 pb-16 border-b sm:border-r border-solid  border-sv-negro sm:last:border-r-0 number-item">
     <p class="text-7xl font-semibold text-right">{numero}</p>
     <div class="flex flex-col text-start gap-5">
        <p class=" text-sv-blue text-3xl font-bold">â€¢ {title}</p>
       <p class="text-sv-negro text-[15px]">{text}</p>
     </div>
</div>
<style>
  .number-item:nth-child(2) {
    @apply border-r-0
  }
  @media (min-width: 1024px) {
    .number-item:nth-child(2) {
    @apply border-r
  }
}
</style>
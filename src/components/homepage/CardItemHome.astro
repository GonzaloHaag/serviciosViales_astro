---
interface Props {
    iconUrl:string;
    title:string;
    subtitle:string;
    text:string;
    className?:string;
}
const {iconUrl,title,subtitle,text,className} = Astro.props;
---
<div class={`${className} flex flex-col gap-y-5 items-center text-center text-white py-11 bg-sv-blue rounded-xl shadow-xl px-2`}>
    <img src={ iconUrl } alt="icon atencion" width="60" height="60" />

    <div class="flex flex-col gap-2">
    <div class="flex flex-col text-xl font-extrabold">
        <span>{ title }</span>
        <span class="leading-4">{ subtitle }</span>
    </div>
    <p class="max-w-64 leading-5">{ text }</p>
</div>
</div>
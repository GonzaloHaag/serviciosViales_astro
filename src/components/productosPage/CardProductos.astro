---
interface Props {
  imageUrl: string;
  title: string;
}
const { imageUrl, title } = Astro.props;
---
    <div
  class="grid grid-cols-1 md:grid-cols-2 gap-2 md:gap-0 bg-transparent border-b border-solid border-slate-300 py-10"
>
  <img src={ imageUrl } class="w-full h-full rounded-xl aspect-video" loading="lazy" alt={title} />

  <div class="flex flex-col text-start justify-center gap-5 items-start md:pl-8">
    <h3 class="text-[2rem] text-sv-blue font-bold">
      { title }
    </h3>
    <slot name="texto" />
    <a
      href="/contacto"
      title="Contáctanos"
      class="bg-black text-white text-[15px] font-normal px-[1.875rem] py-3 rounded-full transition-colors duration-300 hover:bg-sv-blue"
    >
      Contáctanos
    </a>
  </div>
</div>


